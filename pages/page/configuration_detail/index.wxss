/* 零件展示弧度效果 */
.circular_bead {
  position: absolute;
  height: 36rpx;
  width: 750rpx;
  background: #2a82e4;
  top: 100rpx;
  left: 0rpx;
}

.tet_text {
  padding: 30rpx 30rpx 20rpx 30rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  position: fixed;
  top: 0;
  background-color: #2c7fdd;
  width: 100%;
  z-index: 999999;
}

.tet_text_category {
  display: flex;
  position: relative;
}

.triangle1 {
  width: 0;
  height: 0;
  border: 10rpx solid red;
  border-top-color: #000;
  border-bottom: none;
  border-left-color: transparent;
  border-right-color: transparent;
}

.triangle_border_up1 {
  width: 0;
  height: 0;
  border-width: 0 10rpx 10rpx;
  border-style: solid;
  border-color: transparent transparent #000; /*透明 透明  灰*/
}

.category_btn {
  width: 180rpx;
  height: 48rpx;
  border-radius: 22rpx;
  background-color: #529aea;
  font-size: 28rpx;
  text-align: center;
  line-height: 48rpx;
  margin-left: 20rpx;
  padding-right: 20rpx;
  margin-right: 60rpx;
}

/* 侧滑 */

.main {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 170rpx;
  top: 0;
  background-color: #fff;
  z-index: 999999999;
}

.show-side {
  transform: translate(0%, 0%);
  transition: all 0.5s ease 0s;
}

.hidden-side {
  transform: translate(85%, 0%);
  transition: all 0.5s ease 0s;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.cover {
  width: 22.5%;
  height: 100%;
  position: fixed;
  z-index: 19999999;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  transition: all 0.5s ease 0.3s;
}

.main_category_btn {
  display: flex;
  bottom: 0rpx;
  position: absolute;
  left: 0;
  box-shadow: 0px -4px 9px 0px rgba(195, 195, 195, 0.5);
}

.main_category_btn view {
  flex: 1;
  height: 104rpx;
  width: 290rpx;
  text-align: center;
  line-height: 104rpx;
}

.main_category_btn view:nth-last-of-type(2) {
  color: #606060;
  background-color: #fff;
}

.main_category_btn view:nth-last-of-type(1) {
  color: #fff;
  background-color: #529aea;
}

.checked {
  width: 136rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  color: #529aea;
  border-radius: 30rpx;
  background: #d6e5f7;
  margin: 30rpx 20rpx 20rpx 30rpx;
  border: 1rpx solid #529aea;
}

.main_left {
  width: 77.4%;
  height: 100%;
  background-color: #fff;
  padding-bottom: 150rpx;
}

.main_right {
  width: 23%;
  height: 100%;
  background-color: red;
}

.styleScroll {
  height: 90vh;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.fold {
  font-size: 30rpx;
  font-weight: bold;
}

.fold_all {
  padding: 24rpx 50rpx;
}

.gategories {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.gategories_style {
  margin: 10rpx 0rpx;
  font-size: 26rpx;
  color: #262626;
}

.gategories_style1 {
  font-size: 26rpx;
  background: #d6e5f7;
  margin: 10rpx 0rpx;
  color: #529aea;
}

.onChecked {
  background: #fff;
  margin: 0rpx 30rpx;
  padding: 24rpx 20rpx 20rpx 20rpx;
  border-radius: 30rpx;
  transform: scaleY(1);
}

.level1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
