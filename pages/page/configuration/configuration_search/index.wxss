.header-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 480rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: #fff;
  font-size: 40rpx;
}

.input-box {
  display: flex;
  align-items: center;
  width: 90%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  color: #999;
}

.input-box .search-input{
  flex-grow: 1;
  font-size: 28rpx;
}

.input-box .search{
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.title {
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: rgba(0, 0, 0, 0.80);
  letter-spacing: 0.83px;
  text-align: center;
  margin-top: 80rpx;
}

.sub-title {
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.80);
  letter-spacing: 0.67px;
  text-align: center;
}

.search-btn {
  width: 550rpx;
  height: 80rpx;
  background: #1168cf;
  color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  letter-spacing: 0.67px;
  text-align: center;
  border-radius: 100rpx;
  margin: 100rpx auto 0;
}
.search-btn:active{
  opacity: .8;
}
