/* pages/others/part-data/part-data.wxss */
.content-box {
    height: calc(100vh - 50px);
    box-sizing: border-box;
    overflow: auto;
}

.part-img {
    width: 100%;
    height: 100%;
}

.part-item-box {
    margin: 20rpx 0;
    background: #fff;
    font-size: 28rpx;
    color: #4A4A4A;
    letter-spacing: 0.58px;
    line-height: 1.5;
}

.info-box {
    display: flex;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
}

.info-box .left {
    width: 200rpx;
    height: 200rpx;
    margin-right: 30rpx;
}

.info-box .right {
    flex-grow: 1;
    overflow: auto;
}

.part-item-box .bottom {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #1168CF;
    letter-spacing: 0.58px;
    border-top: 1px solid #f6f6f6;
}
.part-item-box .bottom-item {
    width: 50%;
    text-align: center;
    box-sizing: border-box;
}
.part-item-box .bottom-item.bd {
   border-right: 1px solid #f6f6f6;
}