@import "../../../assets/icon/iconfont.wxss";

/* 轮播图 */
.swiper-view{
  display: flex;
  height: 390rpx;
  width: 100vw;
  text-align: center;
}

.swiper {
  width: 100%;
  height: 96%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

/*系统导航 */
.system-navigation-list {
  display: flex;
  width: 100%;
  margin-top: 26rpx;
  flex-flow: row wrap;
}

.system-navigation-list  navigator {
  flex: 0 0 24%;
  margin-bottom: 20rpx;
  margin-left: 6rpx;
}

.system-navigation-list  navigator view {
  flex: 0 0 25%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  display: flex;
  margin-bottom: 20rpx;
}

.system-navigation-list navigator view text {
  font-size: 28rpx;
  color: #505050;
  font-weight: bold;
  margin-top: 10rpx;
}

.system-navigation-list navigator view image {
  width: 120rpx;
  height: 120rpx;
}

.bg_hover {
  transform: scale(0.9, 0.9);
}


/* 配置查询 */

.product_list {
  display: flex;
  flex-flow: row wrap;
  /* justify-content: center; */
  align-items: center;
  width: 100%;
  height: 100%;
}

.commodity {
  background-color: #fcfafa;
  border-radius: 6rpx;
  width: 326rpx;
  height: 284rpx;
  flex: 0 0 40%;
  margin: 18rpx 20rpx 25rpx 20rpx;
  text-align: center;
  border: 2rpx solid #efefef;
}

.commodity image {
  border-radius: 6rpx 6rpx 0 0;
  width: 322rpx;
  height: 214rpx;
}

.font {
  font-size: 24rpx;
  text-align: center;
  font-weight: bold;
  margin: 0 30rpx;
  padding-bottom: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 8rpx;
}